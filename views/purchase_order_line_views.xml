<odoo>
    <record id="purchase_order_line_product_brand_id" model="ir.ui.view">
        <field name="name">purchase.order.line.product.brand.field</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.purchase_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='products']/field[@name='order_line']//field[@name='product_id']" position="after">
                <field name="product_brand_id"/>
            </xpath>
        </field>
    </record>
</odoo>